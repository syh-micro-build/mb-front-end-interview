  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "commitizen": "^4.3.1",
    "commitlint": "^19.6.1",
    "cz-git": "^1.11.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.11",
    "markdownlint-cli2": "^0.16.0",
